<h1><%=t 'heading.editing' %> <%=t 'belongs' %></h1>

<% form_for(@belong) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :employee_id %><br />
    <%= f.text_field :employee_id %>
  </p>
  <p>
    <%= f.label :division_id %><br />
    <%= f.text_field :division_id %>
  </p>
  <p>
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </p>
  <p>
    <%= f.label :primary_flag %><br />
    <%= f.text_field :primary_flag %>
  </p>
  <p>
    <%= f.submit I18n.t('submit.update') %>
  </p>
<% end %>

<%= link_to t('link.show'), @belong %> |
