<%= render :partial => '/shared/settings_head' %>

<h1><%=t 'heading.listing' %><%=t 'users' %></h1>

<table>
  <tr>
    <th><%= User.human_attribute_name(:login) %></th>
    <th><%= User.human_attribute_name(:name) %></th>
    <th><%= User.human_attribute_name(:email) %></th>
    <th><%= User.human_attribute_name(:employee) %></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.employee ? user.employee.name : nil %></td>
  </tr>
<% end %>
</table>

<br />



