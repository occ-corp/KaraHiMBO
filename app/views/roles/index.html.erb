<%= render :partial => '/shared/settings_head' %>
<h1><%=t 'heading.listing' %><%=t 'roles' %></h1>

<table>
  <tr>
    <th><%= Role.human_attribute_name(:name) %></th>
    <th><%= Role.human_attribute_name(:permission) %></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.name %></td>
    <td><%=h role.permission %></td>
    <td><%= link_to t('link.show'), role %></td>
    <td><%= link_to t('link.edit'), edit_role_path(role) %></td>
    <td><%= link_to t('link.destroy'), role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "#{t('link.new')} #{t('roles')}", new_role_path %>
