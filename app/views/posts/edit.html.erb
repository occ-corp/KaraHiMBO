<h1><%=t 'heading.editing' %> <%=t 'posts' %></h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit I18n.t('submit.update') %>
  </p>
<% end %>

<%= link_to t('link.show'), @post %> |
<%= link_to I18n.t('link.back'), posts_path %>
